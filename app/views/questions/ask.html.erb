<div style="width:600px">
<form novalidate="novalidate" class="simple_form search" action="/answer" accept-charset="UTF-8" method="get">
  <div class="search-form-control form-group" style="background-color:green padding:18px">
    <input class="form-control string required" type="text" name="question" id="search_query" />
    <button name="button" type="submit" class="btn btn-primary">
      <i class="fas fa-search"></i> Ask!
    </button>
  </div>
</form>
</div>
